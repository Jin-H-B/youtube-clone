extends base.pug

block content
    h4 Update video
    form(method="POST")
        label(for="thumb") Thumbnail File 
        input(type="file", accept="image/*", required, id="thumb", name="thumb")
        input(name="title", placeholder="New Title", value=video.title, required)
        input(placeholder="Description", required, type="text", name="description", minlength=20, value=video.description)
        input(placeholder="Hashtags, separated by comma.", required, type="text", name="hashtags", value=video.hashtags.join())
        input(value="Save", type="submit").social__btn